using TMS.Application.Common.Domain;
using CSharpFunctionalExtensions;

namespace TMS.Application.Entities
{
    public class User : Entity<int>, IAudit
    {
        public string FullName { get; private set; }
        public string Email { get; private set; }
        public string Role { get; private set; }
        public string PasswordHash { get; private set; }

        public DateTimeOffset CreatedOn { get; private set; }
        public DateTimeOffset? ModifiedOn { get; private set; }

        public User(string fullName, string email, string role, string passwordHash)
        {
            FullName = fullName;
            Email = email;
            Role = role;
            PasswordHash = passwordHash;
        }

        public void Update(string fullName, string email, string role, string passwordHash)
        {
            FullName = fullName;
            Email = email;
            Role = role;
            PasswordHash = passwordHash;
        }

        #region Audit_Properties


        public void SetCreatedOn(DateTimeOffset dateTimeOffset)
        {
            CreatedOn = dateTimeOffset;
        }

        public void SetModifiedOn(DateTimeOffset dateTimeOffset)
        {
            ModifiedOn = dateTimeOffset;
        }

        #endregion Audit_Properties
    }
}
